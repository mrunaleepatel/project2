<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/header.ejs') %>
    <main>
        <div>
            <p><%= user%></p>
            <a href="/user/logout"><button>Logout</button></a>
            <a href="/weather/new">Create New location</a>
            <% for (weather of weathers) { %>
                <article>
                    <a href="/weather/<%= weather._id %>">
                        <h2>
                            <%= weather.location %>
                        </h2>
                    </a>
                </article>
            <% } %>
        </div>
    </main>
</body>
</html>